<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Mi Perfil</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Materialize CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .navbar-profile {
      background: linear-gradient(135deg, #1e3a8a 0%, #3730a3 100%);
      box-shadow: 0 4px 20px rgba(30, 58, 138, 0.3);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    .navbar-profile .brand-logo {
      font-weight: 700;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }
    .page-title {
      color: #2563eb;
      font-weight: 700;
      text-shadow: 0 2px 4px rgba(37, 99, 235, 0.2);
      margin-bottom: 30px;
    }
    .card-panel {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 30px;
      margin-bottom: 30px;
    }
    .section-title {
      color: #2563eb;
      font-weight: 600;
      margin-bottom: 25px;
    }
    .input-field input[type=text]:focus,
    .input-field input[type=email]:focus,
    .input-field input[type=password]:focus,
    .input-field input[type=tel]:focus,
    .input-field input[type=date]:focus {
      border-bottom: 2px solid #2563eb !important;
      box-shadow: 0 1px 0 0 #2563eb !important;
    }
    .input-field input[type=text]:focus + label,
    .input-field input[type=email]:focus + label,
    .input-field input[type=password]:focus + label,
    .input-field input[type=tel]:focus + label,
    .input-field input[type=date]:focus + label {
      color: #2563eb !important;
    }
    .btn-update {
      background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
      border-radius: 12px;
      padding: 15px 30px;
      font-weight: 600;
      text-transform: none;
      box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      line-height: 1;
    }
    .btn-update:hover {
      background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
      transform: translateY(-2px);
      box-shadow: 0 12px 25px rgba(59, 130, 246, 0.4);
    }
    .btn-update i {
      font-size: 18px;
      margin: 0;
    }
    .btn-change-password {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      border-radius: 12px;
      padding: 15px 30px;
      font-weight: 600;
      text-transform: none;
      box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      line-height: 1;
    }
    .btn-change-password:hover {
      background: linear-gradient(135deg, #059669 0%, #047857 100%);
      transform: translateY(-2px);
      box-shadow: 0 12px 25px rgba(16, 185, 129, 0.4);
    }
    .btn-change-password i {
      font-size: 18px;
      margin: 0;
    }
  </style>
</head>
<body>

  <!-- Navbar (homogénea con Admin Dashboard) -->
  <nav class="navbar-profile">
    <div class="nav-wrapper container">
      <a href="#!" class="brand-logo">
        <i class="material-icons left">manage_accounts</i>Mi Perfil
      </a>
      <ul class="right hide-on-med-and-down">
        <li><a href="#" id="goDashboard"><i class="material-icons left">analytics</i>Dashboard</a></li>
        <li><a href="/profile"><i class="material-icons left">manage_accounts</i>Mi Perfil</a></li>
        <li><a href="#" id="logout"><i class="material-icons left">power_settings_new</i>Cerrar sesión</a></li>
      </ul>
    </div>
  </nav>

  <!-- Contenido principal -->
  <div class="container section">
    <h4 class="page-title center-align">Perfil del Usuario</h4>

    <!-- Datos personales -->
    <div class="card-panel z-depth-2">
      <h5 class="section-title">
        <i class="material-icons left">badge</i>Datos personales
      </h5>
      <form id="profileForm">
        <div class="row">
          <div class="input-field col s12 m6">
            <input type="text" id="name" name="name" required>
            <label for="name">Nombre</label>
          </div>

          <div class="input-field col s12 m6">
            <input type="text" id="lastName" name="lastName" required>
            <label for="lastName">Apellido</label>
          </div>

          <div class="input-field col s12 m6">
            <input type="email" id="email" name="email" disabled>
            <label for="email" class="active">Correo electrónico</label>
          </div>

          <div class="input-field col s12 m6">
            <input type="text" id="phoneNumber" name="phoneNumber">
            <label for="phoneNumber">Teléfono</label>
          </div>

          <div class="input-field col s12 m6">
            <input type="date" id="birthdate" name="birthdate">
            <label for="birthdate" class="active">Fecha de nacimiento</label>
          </div>

          <div class="input-field col s12 m6">
            <input type="text" id="address" name="address">
            <label for="address">Dirección</label>
          </div>

          <div class="input-field col s12">
            <input type="text" id="url_profile" name="url_profile">
            <label for="url_profile">URL de perfil</label>
          </div>
        </div>

        <div class="center-align">
          <button type="submit" class="btn btn-update waves-effect waves-light">
            <i class="material-icons">save</i>
            <span>Guardar cambios</span>
          </button>
        </div>
      </form>
    </div>

    <!-- Cambiar contraseña -->
    <div class="card-panel z-depth-2">
      <h5 class="section-title">
        <i class="material-icons left">security</i>Cambiar contraseña
      </h5>
      <form id="passwordForm">
        <div class="row">
          <div class="input-field col s12 m6">
            <input type="password" id="oldPassword" name="oldPassword" required>
            <label for="oldPassword">Contraseña actual</label>
          </div>

          <div class="input-field col s12 m6">
            <input type="password" id="newPassword" name="newPassword" required>
            <label for="newPassword">Nueva contraseña</label>
          </div>
        </div>

        <div class="center-align">
          <button type="submit" class="btn btn-change-password waves-effect waves-light">
            <i class="material-icons">lock_reset</i>
            <span>Actualizar contraseña</span>
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Materialize JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', async () => {
      const token = sessionStorage.getItem('token');
      if (!token) return location.href = '/signin';

      // Obtener datos del usuario
      const res = await fetch('/api/users/me', {
        headers: { 'Authorization': 'Bearer ' + token }
      });
      const data = await res.json();
      if (!res.ok) return location.href = '/403';

      // Rellenar campos
      const fields = ['name', 'lastName', 'email', 'phoneNumber', 'birthdate', 'address', 'url_profile'];
      fields.forEach(id => {
        const el = document.getElementById(id);
        if (el) {
          if (id === 'birthdate' && data.birthdate)
            el.value = data.birthdate.split('T')[0];
          else
            el.value = data[id] || '';
        }
      });
      M.updateTextFields();

      // Redirigir según rol
      document.getElementById('goDashboard').addEventListener('click', () => {
        const payload = JSON.parse(atob(token.split('.')[1]));
        const roles = payload.roles || [];
        if (roles.includes('admin')) location.href = '/dashboard/admin';
        else location.href = '/dashboard/user';
      });

      // Logout
      document.getElementById('logout').addEventListener('click', () => {
        sessionStorage.removeItem('token');
        location.href = '/signin';
      });

      // Actualizar perfil
      document.getElementById('profileForm').addEventListener('submit', async e => {
        e.preventDefault();
        const formData = Object.fromEntries(new FormData(e.target));
        const res = await fetch('/api/users/me', {
          method: 'PUT',
          headers: {
            'Authorization': 'Bearer ' + token,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
        });
        if (res.ok) M.toast({ html: 'Perfil actualizado con éxito', classes: 'green' });
        else M.toast({ html: 'Error al actualizar el perfil', classes: 'red' });
      });

      // Actualizar contraseña
      document.getElementById('passwordForm').addEventListener('submit', async e => {
        e.preventDefault();
        const formData = Object.fromEntries(new FormData(e.target));
        const res = await fetch('/api/users/me/password', {
          method: 'PUT',
          headers: {
            'Authorization': 'Bearer ' + token,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
        });
        const message = res.ok
          ? 'Contraseña actualizada con éxito'
          : (await res.json()).message || 'Error al actualizar la contraseña';
        M.toast({ html: message, classes: res.ok ? 'green' : 'red' });
        if (res.ok) e.target.reset();
      });
    });
  </script>
</body>
</html>
