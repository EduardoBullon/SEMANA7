<% 
const title = 'Dashboard     </div>

    <div class="col s12 m6">rio - Auth App';

%>

<%- include('partials/header', { title, user }) %>

<div class="row">
    <div class="col s12">
        <h3>
            <i class="material-icons left large">dashboard</i>
            Dashboard de Usuario
        </h3>
        <p class="grey-text">Bienvenido, <%= user.name %>!</p>
    </div>
</div>

<div class="row">
    
    <div class="col s12 m6 l4">
        <div class="card dashboard-card blue lighten-5">
            <div class="card-content center-align">
                <i class="material-icons large blue-text">account_circle</i>
                <h5>Mi Perfil</h5>
                <p>Gestiona tu información personal</p>
            </div>
            <div class="card-action center-align">
                <a href="/profile" class="btn green">Ver Perfil</a>
            </div>
        </div>
    </div>

    <div class="col s12 m6 l4">
        <div class="card dashboard-card green lighten-5">
            <div class="card-content center-align">
                <i class="material-icons large green-text">verified_user</i>
                <h5>Estado de Cuenta</h5>
                <p>Tu cuenta está activa y verificada</p>
            </div>
            <div class="card-action center-align">
                <span class="green-text">✓ Verificado</span>
            </div>
        </div>
    </div>

    <div class="col s12 m6 l4">
        <div class="card dashboard-card orange lighten-5">
            <div class="card-content center-align">
                <i class="material-icons large orange-text">settings</i>
                <h5>Configuración</h5>
                <p>Ajusta tus preferencias</p>
            </div>
            <div class="card-action center-align">
                <a href="/profile" class="btn orange">Configurar</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <div class="card user-info-card">
            <div class="card-content">
                <span class="card-title">
                    <i class="material-icons left">info</i>
                    Información de la Cuenta
                </span>
                
                <div class="row">
                    <div class="col s12 m6">
                        <p><strong>Email:</strong> <%= user.email %></p>
                        <p><strong>Nombre:</strong> <%= user.name %> <%= user.lastName %></p>
                        <p><strong>Teléfono:</strong> <%= user.phoneNumber %></p>
                    </div>
                    <div class="col s12 m6">
                        <p><strong>Fecha de Nacimiento:</strong> <%= user.birthdate ? new Date(user.birthdate).toLocaleDateString('es-ES') : 'No especificada' %></p>
                        <p><strong>Rol:</strong> 
                            <span class="chip green white-text">
                                <i class="material-icons left">person</i>
                                <%= user.roles.join(', ') %>
                            </span>
                        </p>
                        <p><strong>Miembro desde:</strong> <%= user.createdAt ? new Date(user.createdAt).toLocaleDateString('es-ES') : 'No disponible' %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    <i class="material-icons left">help</i>
                    Acciones Disponibles
                </span>
                <div class="collection">
                    <a href="/profile" class="collection-item">
                        <i class="material-icons left">edit</i>
                        Editar mi perfil
                    </a>
                    <a href="#" onclick="logout()" class="collection-item">
                        <i class="material-icons left">exit_to_app</i>
                        Cerrar sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>