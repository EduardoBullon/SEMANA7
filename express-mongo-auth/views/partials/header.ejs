<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Express Mongo Auth' %></title>
    
    <!-- Materialize CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/app.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="green darken-2">
        <div class="nav-wrapper container">
            <a href="/" class="brand-logo">
                <i class="material-icons left">account_circle</i>Auth App
            </a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <% if (typeof user !== 'undefined' && user) { %>
                    <li><a href="/profile"><i class="material-icons left">person</i>Perfil</a></li>
                    <% if (user.roles && user.roles.includes('admin')) { %>
                        <li><a href="/dashboard/admin"><i class="material-icons left">admin_panel_settings</i>Admin</a></li>
                    <% } else { %>
                        <li><a href="/dashboard/user"><i class="material-icons left">dashboard</i>Dashboard</a></li>
                    <% } %>
                    <li><a href="#" onclick="logout()"><i class="material-icons left">exit_to_app</i>Cerrar Sesión</a></li>
                <% } else { %>
                    <li><a href="/signin"><i class="material-icons left">login</i>Iniciar Sesión</a></li>
                    <li><a href="/signup"><i class="material-icons left">person_add</i>Registrarse</a></li>
                <% } %>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container" style="margin-top: 30px;">