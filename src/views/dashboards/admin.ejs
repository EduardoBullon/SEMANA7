<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Dashboard Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Materialize CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .navbar-admin {
      background: linear-gradient(135deg, #1e3a8a 0%, #3730a3 100%);
      box-shadow: 0 4px 20px rgba(30, 58, 138, 0.3);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    .navbar-admin .brand-logo {
      font-weight: 700;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }
    .page-title {
      color: #2563eb;
      font-weight: 700;
      text-shadow: 0 2px 4px rgba(37, 99, 235, 0.2);
      margin-bottom: 30px;
    }
    .card-panel {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 30px;
    }
    .section-title {
      color: #2563eb;
      font-weight: 600;
      margin-bottom: 20px;
    }
    .highlight tbody tr:hover {
      background: rgba(59, 130, 246, 0.1);
    }
    .table-header {
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(29, 78, 216, 0.1) 100%);
      border-radius: 10px 10px 0 0;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar-admin">
    <div class="nav-wrapper container">
      <a href="#!" class="brand-logo">
        <i class="material-icons left">admin_panel_settings</i>Panel Administrativo
      </a>
      <ul class="right hide-on-med-and-down">
        <li><a href="#" id="goDashboard"><i class="material-icons left">analytics</i>Dashboard</a></li>
        <li><a href="/profile"><i class="material-icons left">manage_accounts</i>Mi Perfil</a></li>
        <li><a href="#" id="logout"><i class="material-icons left">power_settings_new</i>Cerrar sesión</a></li>
      </ul>
    </div>
  </nav>

  <!-- Contenido principal -->
  <div class="container section">
    <h4 class="page-title center-align">Panel de Administración</h4>

    <div class="card-panel z-depth-2">
      <h5 class="section-title">
        <i class="material-icons left">groups</i>Usuarios Registrados
      </h5>

      <table class="highlight responsive-table">
        <thead class="table-header">
          <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Roles</th>
            <th>Registro</th>
          </tr>
        </thead>
        <tbody id="usersTable">
          <tr><td colspan="5" class="center-align">Cargando usuarios...</td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', async () => {
      const token = sessionStorage.getItem('token');
      if (!token) return location.href = '/signin';

      const tbody = document.getElementById('usersTable');

      try {
        const res = await fetch('/api/users', {
          headers: { 'Authorization': 'Bearer ' + token }
        });

        if (!res.ok) return location.href = '/403';

        const users = await res.json();

        tbody.innerHTML = users.length
          ? users.map(u => {
              // Extrae nombres de roles correctamente
              const roleNames = (u.roles || []).map(r => r.name).join(', ') || '-';

              return `
                <tr>
                  <td>${u.name} ${u.lastName || ''}</td>
                  <td>${u.email}</td>
                  <td>${u.phoneNumber || '-'}</td>
                  <td>${roleNames}</td>
                  <td>${new Date(u.createdAt).toLocaleDateString()}</td>
                </tr>
              `;
            }).join('')
          : `<tr><td colspan="5" class="center-align grey-text">No hay usuarios registrados.</td></tr>`;

        // Redirección según rol
        document.getElementById('goDashboard').addEventListener('click', () => {
          const payload = JSON.parse(atob(token.split('.')[1]));
          const roles = payload.roles || [];
          if (roles.includes('admin')) location.href = '/dashboard/admin';
          else location.href = '/dashboard/user';
        });

        // Logout
        document.getElementById('logout').addEventListener('click', () => {
          sessionStorage.removeItem('token');
          location.href = '/signin';
        });

      } catch (error) {
        console.error('Error al cargar usuarios:', error);
        tbody.innerHTML = `<tr><td colspan="5" class="center-align red-text">Error al cargar usuarios.</td></tr>`;
      }
    });
  </script>
</body>
</html>
